@model IEnumerable<IdentityUser>
@{
    ViewData["Title"] = "Admin";
}
@section Head 
{
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Admin.css">
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
}

    <div class="wrapper">
        <div class="top_navbar">
            <div class="hamburger">
                <div class="hamburger__inner">
                    <div class="one"></div>
                    <div class="two"></div>
                    <div class="three"></div>
                </div>
            </div>
        <div class="menu">
            <div class="logo">
                Quản Lý 
            </div>
            <div class="right_menu">
                <ul>
                    <li><i class="fas fa-user"></i>
                        <div class="profile_dd">
                        <div class="dd_item">Cá Nhân</div>
                        <div class="dd_item">Đổi mật khấu </div>
                        <div class="dd_item">Đăng Xuất</div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>  
    <div class="main">
        <div class="main_container">
            <div class="sidebar">
                <div class="sidebar__inner">
                    <div class="profile">
                        <div class="img">
                            <img src="https://i.imgur.com/Ctwf8HA.png" alt="profile_pic">
                        </div>
                    <div class="profile_info">
                        <p>Chào Mừng</p>
                        <p class="profile_name">Admin</p>
                    </div>
                </div>
                <div  class="wrapper1">
                    <div class="tabs">
                        <ul>
                            <li class="active">
                                <span class="icon"><i class="fas fa-dice-d6"></i></span>
                                <span class="title">Lớp Đang Học</span>
                            </li>
                            <li>
                                <span class="icon"><i class="fab fa-delicious"></i></span>
                                <span class="title">Tài Khoản</span>
                            </li>                     
                        </ul>
                    </div>
                </div>        
            </div>
        </div>
        <div class="content">
            <div class="tab_wrap" style="display: block;">
                <div class="title">Lớp Đang Học</div>
                <div class="tab_content">
                    <table class="table table-dark">
                        <thead>
                          <tr>
                            <th scope="col">STT</th>
                            <th scope="col">Tên</th>
                            <th scope="col">Lớp</th>
                            <th scope="col">Mã Phòng</th>
                            <th scope="col"></th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <th scope="row">1</th>
                            <td>Admin</td>
                            <td>Toán</td>
                            <td>132</td>
                            <td class="float-right">
                                <button type="button" class="btn btn-primary">Sửa</button>
                                <button type="button" class="btn btn-primary">Xóa</button>
                            </td>
                          </tr>
                          <tr>
                            <th scope="row">2</th>
                            <td>Admin</td>
                            <td>Toán</td>
                            <td>132</td>
                            <td class="float-right">
                                <button type="button" class="btn btn-primary">Sửa</button>
                                <button type="button" class="btn btn-primary">Xóa</button>
                            </td>
                          </tr>
                          <tr>
                            <th scope="row">3</th>
                            <td>Admin</td>
                            <td>Toán</td>
                            <td>132</td>
                            <td class="float-right">
                                <button type="button" class="btn btn-primary">Sửa</button>
                                <button type="button" class="btn btn-primary">Xóa</button>
                            </td>                           
                          </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="tab_wrap" style="display: none;">
                <div class="title">Tài Khoản Người Dùng</div>
                <div class="tab_content">
                    <table class="table table-dark">
                        <thead>
                          <tr>
                            <th scope="col">ID</th>
                            <th scope="col">UserName</th>
                            <th scope="col">Password</th>
                            <th scope="col">Birthday</th>
                            <th scope="col">Sex</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Job</th>
                          </tr>
                        </thead>
                        <tbody>
                            @if(Model.Count() != 0)
                            {
                                @foreach (IdentityUser user in Model)
                                {
                                    <tr>
                                        <th scope="row">@user.Id</th>
                                        <td>@user.UserName</td>
                                        <td>@user.Password</td>
                                        <td>@user.Birthday</td>
                                        <td>@user.Sex</td>
                                        <td>@user.Email</td>
                                        <td>@user.PhoneNumber</td>
                                        <td>@user.Job</td>
                                        <td class="float-right">
                                            <form asp-area="" asp-controller="Admin" asp-action="DeleteUser" method="post">
                                            <a asp-action="UpdateIdentityUser" asp-route-key="@user.Id" class="btn btn-primary">Sửa</a>
                                            <input type="hidden" name="Id" value="@user.Id" />
                                            <button type="submit" class="btn btn-primary">Xóa</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }else{
                                <tr>
                                    <th scope="row">No data available</th>
                                </tr>
                            }
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div> 
    
@section Script {
    <script src="~/js/Admin.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/Jquery3.4.1.min.js"></script>
    <script>
		$(document).ready(function(){
			$(".hamburger .hamburger__inner").click(function(){
			  $(".wrapper").toggleClass("active")
			})

			$(".top_navbar .fas").click(function(){
			   $(".profile_dd").toggleClass("active");
			});
		})
	</script>
}